<form action="/compose" method="POST">
    <div class="form-group">
      <label for="postTile" style="justify-content: end; align-items: end; text-align: end;">Title</label>
      <input type="text" class="form-control" name="postTitle" placeholder="Enter Title" autofocus required>
    </div>

    <div class="form-group">
      <label for="postContent">Post</label>
      <textarea class="form-control" name="postContent" rows="3" placeholder="Enter Content" autofocus required></textarea>
    </div>

    <button type="submit" class="btn btn-default" style="width: auto; height: auto;">Publish</button>
  </form>